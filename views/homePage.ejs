<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> <%= title %> </title>
    <link href="/output.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
</head>
<body>
    <div class="m-10">
        <h3 class="text-center"> <%= message %> </h3>
    </div>

    <div>
    <% data.forEach(element => { %>
        <% const myObject = JSON.parse(element.data) %>
        <div>
            <div>
            <div>
            <div>
                
                <div class="m-5">  
                   
                        <div class="flex justify-between"> 
                            <img src="<%= myObject.image %>" alt="" width="50" height="50" class="rounded-full">
                            <div class="flex justify-end">
                                <h5 class="font-bold px-8 my-2">
                                    <small> <%= myObject.fname%> </small>
                                </h5> 
                                <span class="material-symbols-outlined cursor-pointer my-3">
                                    comment
                                </span>   
                            </div>
                                
                        </div>
                    
                    <video width="100%" height="" controls class="my-2">
                        <source src="<%= myObject.video %>" type="video/mp4">
                    </video> 

                    <form action="/form" method="post" class="flex">
                        <div>
                            <label for="comment"><small>comment:</small></label>
                            <input type="text" placeholder=" comment section" width="20px" name="comment" />
                        </div> 
                            <button type="submit" value="submit">
                                <span class="material-symbols-outlined">
                                    send
                                </span>
                            </button>
                    </form>
                </div>
              
            </div>
            </div>
            </div>
          </div>  
    <% }) %>
  
    </div>

</body>
</html>